// Simple slideshow
// https://codepen.io/gabrieleromanato/pen/dImly

// Our projector is 1920 x 1200
// Fit it to a preview by dividing by 2
$slideshow-width: <%= "#{ENV['projector_width'].to_i/2}px" %>;
$slideshow-height: <%= "#{ENV['projector_height'].to_i/2}px" %>;
$slide-fade-time: 1s;

.slider {
  width: $slideshow-width;
  margin: 2em auto;
  
}

.slider-wrapper {
  width: 100%;
  height: $slideshow-height;
  position: relative;
}

.slide {
  float: left;
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity $slide-fade-time linear;
}

.slider-wrapper > .slide:first-child {
  opacity: 1;
}